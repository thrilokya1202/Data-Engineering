#include <stdio.h>

int main() {
    // Write C code here
    int a[30];
    int n;
    printf("enter number of elements");
    scanf("%d",&n);
    printf("enter elements");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    int max=a[0];
    int min=a[0];
    for(int i=0;i<n;i++)
    {
        if(a[i]>max)
        {
            max=a[i];
        }
        if(a[i]<min)
        {
            min=a[i];
        }
    }
    printf("mid range is %d",(max+min)/2);
    return 0;
}
